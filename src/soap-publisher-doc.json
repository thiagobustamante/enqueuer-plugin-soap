{
    "description": "The SOAP publisher provides implementations of soap client",
    "libraryHomepage": "https://github.com/vpulim/node-soap",
    "schema": {
        "attributes": {
            "requestOptions": {
                "description": "Aditional options for http request",
                "type": "object",
                "defaultValue": {}
            },
            "soap": {
                "required": true,
                "description": "Configure the soap operation",
                "type": {
                    "wsdl": {
                        "required": true,
                        "description": "SOAP service descriptor (wsdl)",
                        "type": "string",
                        "example": "./folder/my-service.wsdl or http://myserver/my-service.wsdl"
                    },
                    "service": {
                        "required": true,
                        "type": "string"
                    },
                    "port": {
                        "required": true,
                        "type": "string"
                    },
                    "operation": {
                        "required": true,
                        "type": "string"
                    }
                }
            },
            "endpoint": {
                "description": "Override the SOAP service's host specified in the .wsdl file.",
                "type": "string",
                "required": false
            },
            "options": {
                "required": true,
                "description": "Configure the soap operation",
                "type": {
                    "disableCache": {
                        "description": "Don't cache WSDL files, request them every time",
                        "type": "boolean",
                        "required": false
                    },
                    "endpoint": {
                        "description": "Override the SOAP service's host specified in the .wsdl file.",
                        "type": "string",
                        "required": false
                    },
                    "envelopeKey": {
                        "description": "Set specific key instead of <pre><soap:Body></soap:Body></pre>.",
                        "type": "string",
                        "required": false
                    },
                    "forceSoap12Headers": {
                        "description": "Set proper headers for SOAP v1.2.",
                        "type": "boolean",
                        "required": false
                    }
                }
            },
            "timeout": {
                "required": false,
                "type": "int",
                "defaultValue": 3000,
                "suffix": "ms"
            },
            "path": {
                "required": false,
                "type": "string",
                "defaultValue": "/",
                "example": "/services/myservice"
            },
            "httpHeaders": {
                "description": "Include custom headers",
                "type": "object",
                "defaultValue": {}
            },
            "payload": {
                "description": "The payload to be sent to the soap service",
                "type": "any"
            }
        },
        "hooks": {
            "onMessageReceived": {
                "description": "An alias for onResponseReceived",
                "arguments": {
                    "headers": {},
                    "body": {}
                }
            },
            "onResponseReceived": {
                "description": "Gets called when the subscription receives an message",
                "arguments": {
                    "headers": {},
                    "body": {}
                }
            }
        }
    }
}